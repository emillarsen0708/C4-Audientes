<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/ambience_background"
    tools:context=".CreatePresetFragment">

    <EditText
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="My preset name..."
        android:textAppearance="@style/Play_ambience"
        />

    <Button
        android:id="@+id/add_sound_1"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:background="@xml/add_sound_rectangle"
        android:text="ADD SOUND"
        android:textAppearance="@style/Play_ambience"/>

    <Button
        android:id="@+id/add_sound_2"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="130dp"
        android:background="@xml/add_sound_rectangle"
        android:text="ADD SOUND"
        android:textAppearance="@style/Play_ambience"/>

    <Button
        android:id="@+id/add_sound_3"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="290dp"
        android:background="@xml/add_sound_rectangle"
        android:text="ADD SOUND"
        android:textAppearance="@style/Play_ambience"/>

    <Button
        android:id="@+id/add_sound_4"
        android:layout_width="142dp"
        android:layout_height="132dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="290dp"
        android:background="@xml/add_sound_rectangle"
        android:text="ADD SOUND"
        android:textAppearance="@style/Play_ambience"/>

    <Button
        android:id="@+id/cancel_create_preset"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="480dp"
        android:layout_gravity="center_horizontal"
        android:background="@xml/edit_play_rectangle"
        android:text="Done"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/Play_ambience" />




</FrameLayout>