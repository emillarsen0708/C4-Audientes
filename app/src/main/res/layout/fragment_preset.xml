                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_8"
                        android:tag="add8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="168dp"
                        android:layout_marginTop="-100dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_9"
                        android:tag="add9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="298dp"
                        android:layout_marginTop="-100dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-80dp"
                            android:orientation="vertical" >

                            <Button
                                android:id="@+id/play_button"
                                android:layout_width="50dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="90dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ic_play_icon"
                                android:textAppearance="@style/Play_ambience" />

                            <Button
                                android:id="@+id/edit_preset_button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="290dp"
                                android:layout_marginTop="-60dp"
                                android:background="@drawable/ic_edit_preset"
                                android:textAppearance="@style/Play_ambience" />

                                <TextView
                                    android:id="@+id/concurrent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="17dp"
                                    android:layout_marginStart="280dp"
                                    android:layout_marginTop="0dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="@string/edit_preset"
                                    android:textAppearance="@style/sonority_by2"
                                    android:textStyle="bold" />


                        </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>