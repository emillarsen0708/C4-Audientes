<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preset_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@xml/sound_background"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".PresetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sonority_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="112dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/sonority_by_audientes"
            android:textAppearance="@style/sonority_by2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home"
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/sound"
            android:textAppearance="@style/home"
            android:textColor="#1B325F"
            android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/select_preset_button_1"
                        android:tag="add1"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_2"
                        android:tag="add2"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="168dp"
                        android:layout_marginTop="-100dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_3"
                        android:tag="add3"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="298dp"
                        android:layout_marginTop="-100dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_4"
                        android:tag="add4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_5"
                        android:tag="add5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="168dp"
                        android:layout_marginTop="-100dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_6"
                        android:tag="add6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="298dp"
                        android:layout_marginTop="-100dp"
                        android:background="@drawable/preset_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/add_new"
                        android:textColor="@color/preset_text_color"
                        android:textAlignment="center"
                        android:textAppearance="@style/sonority_by2"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/select_preset_button_7"
                        android:tag="add7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
